{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local-guard.dev/contracts/analysis-response.v1.schema.json",
  "title": "local-guard analysis response",
  "type": "object",
  "required": ["schema_version", "request_id", "categories"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "request_id": {
      "type": "string",
      "minLength": 1
    },
    "model_results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["model", "label", "confidence"],
        "properties": {
          "model": { "type": "string", "minLength": 1 },
          "label": { "type": "string", "minLength": 1 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "additionalProperties": false
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "severity"],
        "properties": {
          "category": { "type": "string", "minLength": 1 },
          "severity": { "type": "integer", "minimum": 0, "maximum": 100 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
